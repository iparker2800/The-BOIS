extends Base_layout 


block content 
        
        link(rel="stylesheet" href="https://www.webnots.com/resources/font-awesome/css/font-awesome.min.css")
        div(class="features")
                h2(id="forthepeople") Love Movies? CineSearch is for you!
                div(class="webnots-information webnots-notification-box")
                        text Look up thousands of movies across all streaming platforms
                div(class="webnots-information webnots-notification-box")
                        text Provides honest feedback from real users
                div(class="webnots-information webnots-notification-box")
                        text Creates recommendations based on movies you have watched before 
                div(class="webnots-information webnots-notification-box")
                        text Don't know where to watch a movie? CineSearch will list all of the available streaming services 

        div(class="middlenav")
                img(id='logo1' src='img/logo.png' alt='logo')
                form(id="form1" role="search")
                        input(type="search" id="query" name="q" placeholder="Search for Movies" aria-label="Search through site content")
                        button 
